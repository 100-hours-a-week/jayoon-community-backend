server {
    listen 80 default_server;
    listen [::]:80 default_server;

    # deploy.sh의 'REMOTE_FE_DEPLOY_DIR' 변수와 일치해야 합니다.
    root /var/www/html;
    index index.html index.htm;

    server_name _;

    # Fallback 처리로 리소스가 존재하지 않으면 자동으로 /index.html를 응답합니다.
    location / {
        try_files $uri $uri/ /index.html;
    }
}