server {
    listen 80 default_server;
    listen [::]:80 default_server;

    # deploy.sh의 'REMOTE_FE_DEPLOY_DIR' 변수와 일치해야 합니다.
    root /var/www/html;
    index index.html index.htm;

    server_name _;

    # Fallback 처리로 리소스가 존재하지 않으면 자동으로 /index.html를 응답합니다.
    location / {
        try_files $uri $uri/ /index.html;
    }

    # /api/ 로 시작하는 모든 요청을 Spring Boot (localhost:8080)로 전달
    location /api {
        proxy_pass http://be-app:8080;
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /portainer {
        proxy_pass http://portainer-app:9000;
    }

    location /registry {
        proxy_pass http://registry-app:5000;
    }
}
